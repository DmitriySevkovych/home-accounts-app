{
    "name": "backend",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "build": "tsup src/index.ts --format cjs",
        "dev": "tsup src/index.ts --format cjs --watch --onSuccess \"dotenv -e .env.local -e .env node dist/index.js\" | pino-pretty",
        "predev": "dotenv -e .env -e .env.local bash ./setup.sh",
        "postdev": "dotenv -e .env -e .env.local bash ./teardown.sh",
        "lint": "tsc --noEmit && eslint \"src/**/*.ts*\"",
        "start": "node dist/index.js",
        "test": "dotenv -e .env.test jest --detectOpenHandles",
        "pretest": "dotenv -e .env.test bash ./setup.sh",
        "posttest": "dotenv -e .env.test bash ./teardown.sh"
    },
    "jest": {
        "preset": "jest-presets/jest/node",
        "runner": "groups"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "domain-model": "*",
        "dotenv-cli": "^7.2.1",
        "express": "^4.17.1",
        "logger": "*",
        "morgan": "^1.10.0",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.15"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.22",
        "@types/morgan": "^1.9.2",
        "@types/node": "^15.12.2",
        "@types/supertest": "^2.0.12",
        "eslint": "^7.32.0",
        "eslint-config-custom-server": "*",
        "jest": "^26.6.3",
        "jest-presets": "*",
        "jest-runner-groups": "^2.2.0",
        "pino-pretty": "^10.0.0",
        "supertest": "^6.2.4",
        "tsconfig": "*",
        "tsup": "^6.2.3",
        "typescript": "^4.8.3"
    }
}
