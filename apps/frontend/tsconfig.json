{
    "extends": "ts-config/tsconfig.json",
    "compilerOptions": {
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "noEmit": true,
        "target": "es5",
        "isolatedModules": true
    },
    "ts-node": {
        "esm": true
    },
    "include": ["next-env.d.ts", "src"],
    "exclude": ["node_modules"]
}
