{
    "name": "home-accounts-app",
    "workspaces": [
        "domain",
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "npx turbo dev --no-cache --continue",
        "build": "npx turbo build --filter=frontend --filter=backend",
        "test": "npx turbo test",
        "format:check": "prettier --check .",
        "format:fix": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "is-ci || husky install"
    },
    "dependencies": {
        "pino": "^8.11.0",
        "pino-http": "^8.3.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.0",
        "is-ci": "^3.0.1",
        "jest": "^29.3.1",
        "jest-runner-groups": "^2.2.0",
        "lint-staged": "^13.2.0",
        "pino-pretty": "^10.0.0",
        "prettier": "^2.8.7",
        "turbo": "^1.9.3",
        "typescript": "4.5.4"
    },
    "version": "1.0.0",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DmitriySevkovych/home-accounts-app.git"
    },
    "bugs": {
        "url": "https://github.com/DmitriySevkovych/home-accounts-app/issues"
