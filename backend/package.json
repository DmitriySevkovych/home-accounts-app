{
    "name": "home-accounts-app-backend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npm run build -- --watch",
        "build": "tsc --build .",
        "format:check": "prettier --check .",
        "format:fix": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "npm run test:unit && npm run test:int",
        "test:int": "jest --config ./jest.int.config.js --group=integration",
        "test:unit": "jest --group=unit",
        "test:watch": "npm run test:unit --watch",
        "containerize": "docker build --tag home-accounts-app-backend .",
        "prepare": "is-ci || husky install"
    },
    "dependencies": {
        "keypress": "^0.2.1",
        "pg": "^8.10.0",
        "pino": "^8.11.0",
        "pino-http": "^8.3.3",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.15",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/node": "17.0.4",
        "@types/uuid": "^9.0.1",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "docker-compose": "^0.23.19",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.8.0",
        "husky": "^8.0.0",
        "is-ci": "^3.0.1",
        "jest": "^29.3.1",
        "jest-runner-groups": "^2.2.0",
        "lint-staged": "^13.2.0",
        "pino-pretty": "^10.0.0",
        "prettier": "^2.8.7",
        "typescript": "4.5.4"
    }
}
