{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "outputs": [".next/**", "!.next/cache/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
