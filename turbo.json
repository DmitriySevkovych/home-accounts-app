{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["NODE_ENV", "PORT", "API_BASE_URL"],
    "pipeline": {
        "build": {
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**",
                "build/**",
                "api/**",
                "public/build/**"
            ],
            "dependsOn": ["^build"],
            "dotEnv": [".env.local", ".env"]
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": [],
            "dotEnv": [".env.test.local", ".env.test"]
        },
        "lint": {
            "dependsOn": ["^build"],
            "dotEnv": [".env.local", ".env"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true,
            "dotEnv": [".env.local", ".env"]
        },
        "clean": {
            "cache": false
        }
    }
}